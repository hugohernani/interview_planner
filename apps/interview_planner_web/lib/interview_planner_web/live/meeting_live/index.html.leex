<h1>Listing Meetings</h1>

<%= if @live_action in [:new, :edit] do %>
  <%= live_modal @socket, InterviewPlannerWeb.MeetingLive.FormComponent,
    id: @meeting.id || :new,
    title: @page_title,
    action: @live_action,
    meeting: @meeting,
    week_planner_id: @week_planner_id,
    return_to: Routes.meeting_index_path(@socket, :index) %>
<% end %>

<div class="container">
  <div class="row available-week-days">
    <%= for week_day <- @week_days do %>
      <%= live_component @socket, InterviewPlannerWeb.MeetingLive.WeekdayComponent, week_day: week_day %>
    <% end %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Scheduled at</th>
      <th>Notes</th>

      <th></th>
    </tr>
  </thead>
  <tbody id="meetings">
    <%= for meeting <- @meetings do %>
      <tr id="meeting-<%= meeting.id %>">
        <td><%= meeting.scheduled_at %></td>
        <td><%= meeting.notes %></td>

        <td>
          <span><%= live_redirect "Show", to: Routes.meeting_show_path(@socket, :show, meeting) %></span>
          <span><%= live_patch "Edit", to: Routes.meeting_index_path(@socket, :edit, meeting) %></span>
          <span><%= link "Delete", to: "#", phx_click: "delete", phx_value_id: meeting.id, data: [confirm: "Are you sure?"] %></span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<span><%= live_patch "New Meeting", to: Routes.meeting_index_path(@socket, :new) %></span>
